@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="register-form">
                <h2 class="card-header-name">Register</h2>
                <div class="card-body-register">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-warning"></div>
                        <a class="btn btn-primary btn-block" id="facebook-button"><i class="fa fa-facebook"></i> Sign in with <b>Facebook</b></a>
                        <div class="form-group">
                            <label asp-for="Input.Username"></label>
                            <input asp-for="Input.Username" class="form-control" />
                            <span asp-validation-for="Input.Username" class="text-warning"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.FullName"></label>
                            <input asp-for="Input.FullName" class="form-control" />
                            <span asp-validation-for="Input.FullName" class="text-warning"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Age"></label>
                            <input asp-for="Input.Age" class="form-control" />
                            <span asp-validation-for="Input.Age" class="text-warning"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-warning"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-warning"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-warning"></span>
                        </div>
                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-success">
                                Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>