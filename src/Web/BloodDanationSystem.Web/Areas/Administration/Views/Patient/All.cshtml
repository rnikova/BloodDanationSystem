@model IList<BloodDanationSystem.Web.ViewModels.Administration.Patient.PatientAllViewModel>;

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-6">
    <div class="card-body">
        <!-- Grid row -->
        <div class="row">
            <!-- Grid column -->
            <div class="col-md-12">
                <h2 class="pt-3 pb-4 text-center font-bold font-up deep-purple-text">Search within patients</h2>
                <div class="input-group md-form form-sm form-2 pl-0">
                    <input class="form-control my-0 py-1 pl-3 purple-border text-light" type="text" placeholder="Search something here..." aria-label="Search">
                    <span class="input-group-addon waves-effect purple lighten-2" id="basic-addon1"><a><i class="fa fa-search white-text text-light" aria-hidden="true"></i></a></span>
                </div>
            </div>
            <!-- Grid column -->
        </div>
        <div class="row custyle">
            <table class="table table-striped text-light">
                <!--Table head-->
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Age</th>
                        <th>Blood Type</th>
                        <th>Username</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <th scope="row">(@i+1)</th>
                            <td>@Model[i].FullName</td>
                            <td>@Model[i].Age </td>
                            <td>@Model[i].BloodType.ToString() </td>
                            <td>@Model[i].User.ToString() </td>
                            <td>
                                <button type="button" class="btn btn-primary"><i class="far fa-eye"></i></button>
                                <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                                <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>