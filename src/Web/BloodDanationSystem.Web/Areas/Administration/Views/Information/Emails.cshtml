@model IList<BloodDanationSystem.Web.ViewModels.Administration.Information.EmailsAllViewModel>;

@{
    ViewData["Title"] = "Emails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-4">
    <div class="card-body">
        <!-- Grid row -->
        <div class="row">
            <!-- Grid column -->
            <div class="col-md-12">
                <h2 class="pt-3 pb-4 text-center font-bold font-up deep-purple-text">Search within emails</h2>
                <div class="input-group md-form form-sm form-2 pl-0">
                    <input class="form-control my-0 py-1 pl-3 purple-border text-light" onkeyup="searchMenu()" type="text" placeholder="Search something here..." aria-label="Search">
                    <span class="input-group-addon waves-effect purple lighten-2" id="basic-addon1"><a><i class="fa fa-search white-text text-light" aria-hidden="true"></i></a></span>
                </div>
            </div>
            <!-- Grid column -->
        </div>
        <div class="row custyle">
            <table class="table text-light table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th scope="col">Subject</th>
                        <th scope="col">Email</th>
                        <th scope="col">Name</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 1; i <= Model.Count; i++)
                    {
                        <tr class="active">
                            <th scope="row">@i</th>
                            <td>@Model[i - 1].Subject </td>
                            <td>@Model[i - 1].Email </td>
                            <td>@Model[i - 1].Name </td>
                            <td>
                                <a href="/Administration/Information/Edit/@Model[i -1].Id" class="btn btn-info a-btn-slide-text">
                                    <input type="hidden" value="@Model[i-1].Id" name="emailId" />
                                    <span class="fa fa-reply"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
