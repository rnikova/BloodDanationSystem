    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
</head>
<body>
    <header>
        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <div class="header-area">
                <div id="sticky-header" class="main-header-area">
                    <div class="container-fluid p-0">
                        <div class="row align-items-center justify-content-between no-gutters">
                            <div class="col-xl-1 col-lg-1">
                                <div class="logo-img">
                                    <a href="/">
                                        <img src="~/img/logo.png" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-9 col-lg-9">
                                <div class="main-menu d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li><a href="/Informations/About">За нас</a></li>

                                            <li>
                                                <a href="/">Полезна информация<i class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                    <li><a href="/Informations/ArticleQA">Въпроси и отговори</a></li>
                                                    <li><a href="/Informations/ArticleTests">Изследвания</a></li>
                                                    <li><a href="/Informations/Hospitals">Кръвни Центрове</a></li>
                                                </ul>
                                            </li>                                       
                                            <li><a href="/Administration/Information/Emails">Съобщения</a></li>
                                            <li>
                                                <a href="#">Кръводаряване<i class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                    <li><a href="/Administration/Donor/All">Донори</a></li>
                                                    <li><a href="/Administration/Patient/All">Пациенти</a></li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-2 d-none d-lg-block">
                                <div class="donate_now">
                                    <a href="/Identity/Account/Logout" class="boxed-btn">Изход</a>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.UserRoleName))
        {
            <div class="header-area">
                <div id="sticky-header" class="main-header-area">
                    <div class="container-fluid p-0">
                        <div class="row align-items-center justify-content-between no-gutters">
                            <div class="col-xl-1 col-lg-1">
                                <div class="logo-img">
                                    <a href="/">
                                        <img src="~/img/logo.png" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-9 col-lg-9">
                                <div class="main-menu d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li><a href="/Informations/About">За нас</a></li>
                                            <li>
                                                <a href="/">Полезна информация<i class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                    <li><a href="/Informations/ArticleQA">Въпроси и отговори</a></li>
                                                    <li><a href="/Informations/ArticleTests">Изследвания</a></li>
                                                    <li><a href="/Informations/BloodCenters">Кръвни центрове</a></li>
                                                </ul>
                                            </li>
                                            <li>
                                                <a href="/">Кърводаряване<i class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                    @if (this.User.IsInRole(GlobalConstants.DonorRoleName) && this.User.IsInRole(GlobalConstants.PatientRoleName))
                                                    {
                                                        <li><a href="/Patients/FindDonor">Намери кръводарител</a></li>
                                                        <li><a href="/Donors/FindPatient">Намери нуждаещ се</a></li>
                                                        <li><a href="/Patients/MyDonors">Вземи снимка</a></li>
                                                        <li><a href="/Donors/MyPatients">Качи снимка</a></li>
                                                    }
                                                    else if (this.User.IsInRole(GlobalConstants.PatientRoleName))
                                                    {
                                                        <li><a href="/Users/BecomeDonor">Стани Кръводарител</a></li>
                                                        <li><a href="/Patients/FindDonor">Намери кръводарител</a></li>
                                                        <li><a href="/Patients/MyDonors">Вземи снимка</a></li>
                                                    }
                                                    else if (this.User.IsInRole(GlobalConstants.DonorRoleName))
                                                    {
                                                        <li><a href="/Users/BecomePatient">Регистрирай нужда от кръв</a></li>
                                                        <li><a href="/Donors/FindPatient">Намери нуждаещ се</a></li>
                                                        <li><a href="/Donors/MyPatients">Качи снимка</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a href="/Users/BecomeDonor">Стани Кръводарител</a></li>
                                                        <li><a href="/Users/BecomePatient">Регистрирай нужда от кръв</a></li>
                                                    }
                                                </ul>
                                            </li>
                                            <li><a href="/Informations/Contact">Контакти</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-2 d-none d-lg-block">
                                <div class="donate_now">
                                    <a href="/Identity/Account/Logout" class="boxed-btn">Изход</a>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="header-area">
                <div id="sticky-header" class="main-header-area">
                    <div class="container-fluid p-0">
                        <div class="row align-items-center justify-content-between no-gutters">
                            <div class="col-xl-1 col-lg-1">
                                <div class="logo-img">
                                    <a href="/">
                                        <img src="~/img/logo.png" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="col-xl-9 col-lg-9">
                                <div class="main-menu d-none d-lg-block">
                                    <nav>
                                        <ul id="navigation">
                                            <li><a href="/Informations/About">За нас</a></li>
                                            <li>
                                                <a href="/">Полезна информация<i class="ti-angle-down"></i></a>
                                                <ul class="submenu">
                                                    <li><a href="/Informations/ArticleQA">Въпроси и отговори</a></li>
                                                    <li><a href="/Informations/ArticleTests">Изследвания</a></li>
                                                    <li><a href="/Informations/BloodCenters">Кръвни центрове</a></li>
                                                </ul>
                                            </li>
                                            <li><a href="/Informations/Contact">Контакти</a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-2 d-none d-lg-block">
                                <div class="donate_now">
                                    <a href="/Identity/Account/Login" class="boxed-btn">Вход</a>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </header>
    <main role="main" class="pb-3">
        @this.RenderBody()
    </main>
    <!-- footer_start -->
    <footer class="footer">
        <div class="footer_top">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Включи се
                            </h3>
                            <p class="footer_text doanar">
                                <a class="first" href="/Identity/Account/Login">Стани кръводарител</a>
                            </p>

                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Адрес
                            </h3>
                            <p class="footer_text">
                                200, A-block, Green road, USA <br>
                                +10 367 267 2678 <br>
                                <a class="domain" href="#">contact@nonprofit.com</a>
                            </p>
                            <div class="socail_links">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-facebook-square"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-twitter"></i>
                                        </a>
                                    </li>
